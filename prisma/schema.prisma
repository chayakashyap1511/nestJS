generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum AccountType {
  SUPERADMIN
  USER
}

enum TokenType {
  ACCESS
  REFRESH
  RESET_PASSWORD
  VERIFY_EMAIL
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  fullName        String
  email           String      @unique
  phone           String?
  password        String?
  provider        String?
  providerId      String?
  dateOfBirth     DateTime?
  gender          Gender?
  currentCity     String?
  profilePic      String?
  accountType     AccountType @default(USER)
  isEmailVerified Boolean     @default(false)
  refreshToken    String?
  isActive        Boolean     @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String?
  phone     String?
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
